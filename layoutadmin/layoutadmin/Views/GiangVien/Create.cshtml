@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    form {
        width: 100%;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #999;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
        display: block;
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }
</style>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">THÊM DỮ LIỆU</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form>
            <label for="maGV">Mã giảng viên:</label>
            <input type="text" id="maGV" name="maGV"><br>

            <label for="hoTen">Họ và tên:</label>
            <input type="text" id="hoTen" name="hoTen"><br>

            <label for="maDV">Mã đơn vị:</label>
            <input type="text" id="maDV" name="maDV"><br>

            <button class="btn btn-block btn-success" onclick="CreateGV()">Lưu</button>
        </form>
    </div>
    <!-- /.card-body -->
    <div id="pagination" class="pagination">
    </div>
</div>

<script>

    function CreateGV() {

        const apiLink = "https://localhost:44364/api/GiangVien/Create";
        const maGV = document.getElementById("maGV").value;
        const hoTen = document.getElementById("hoTen").value;
        const maDV = document.getElementById("maDV").value;

        const data = {
            maGV: maGV,
            hoTen: hoTen,
            maDV: maDV,
        }

        var options = {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data),
        };

        fetch(apiLink, options)
            .then(response => {
                if (response.ok) {
                    alert('Thêm dữ liệu thành công!');
                    window.location.href = '/GiangVien';
                } else {
                    alert('Có lỗi');
                }
            });
    }
</script>